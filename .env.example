# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@inspection.com

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3001

# ============================================
# AWS Configuration (S3 for file uploads)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=inspection-uploads

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
BACKEND_URL=http://inspection-api:3000

# ============================================
# NextAuth Configuration
# ============================================
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3001

# ============================================
# Database Configuration (Advanced)
# Note: Only change if you know what you're doing
# Default values work out of the box
# ============================================
# POSTGRES_DB=inspection_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres123
